{
  "name": "Border Creator",
  "description": "Create borders for testing CSS!",
  "version": "0.1",
  "author": "Mark Alexander and Michael Grant",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}